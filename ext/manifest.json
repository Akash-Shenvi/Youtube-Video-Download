
{
  "manifest_version": 3,
  "name": "StreamBolt Downloader",
  "version": "1.0",
  "description": "Download YouTube videos with quality selection",
  "permissions": ["tabs","cookies","storage","activeTab"],
  "host_permissions": ["https://*.youtube.com/*","http://localhost:5000/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    { "matches": ["https://www.youtube.com/*"], "js": ["content.js"] }
  ],
  "action": { "default_popup": "popup.html" }
}
